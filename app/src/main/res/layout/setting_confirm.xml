<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/confirmback">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/courseBox"
        android:src="@drawable/coursebackground"
        android:scaleType="centerInside"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/courseName"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/courseBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="98dp"
        android:layout_marginEnd="98dp" />
    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/mode"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="@null"
        android:onClick="mode_onClick"
        android:layout_marginTop="26dp"
        android:layout_alignTop="@+id/courseName"
        android:layout_alignLeft="@+id/method"
        android:layout_alignStart="@+id/method" />
    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/method"
        android:background="@null"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:onClick="method_onClick"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/mode"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp" />
    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/speed"
        android:background="@null"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:onClick="speed_onClick"
        android:layout_alignTop="@+id/method"
        android:layout_toLeftOf="@+id/method"
        android:layout_toStartOf="@+id/method"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastEnter"
        android:src="@drawable/enter"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:onClick="lastEnter_onClick"
        android:background="@null"
        android:layout_below="@+id/method"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>