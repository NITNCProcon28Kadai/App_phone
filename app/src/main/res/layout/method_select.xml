<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/methodback">

    <ImageButton
        android:id="@+id/intervalBtn"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@null"
        android:onClick="interval_onClick"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/exercize_interval"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/paceBtn"
        android:layout_toStartOf="@+id/paceBtn"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="14dp" />

    <ImageButton
        android:id="@+id/paceBtn"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:onClick="pace_onClick"
        android:scaleType="centerInside"
        android:src="@drawable/exercize_pace"
        android:layout_alignTop="@+id/intervalBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>